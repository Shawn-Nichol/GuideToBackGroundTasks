<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Looper.LooperFragment">


    <Button
        android:id="@+id/frag_looper_btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="START"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/frag_looper_btn_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="STOP"
        app:layout_constraintEnd_toEndOf="@+id/frag_looper_btn_start"
        app:layout_constraintStart_toStartOf="@+id/frag_looper_btn_start"
        app:layout_constraintTop_toBottomOf="@+id/frag_looper_btn_start" />

    <Button
        android:id="@+id/frag_looper_btn_task_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Task A"
        app:layout_constraintEnd_toEndOf="@+id/frag_looper_btn_stop"
        app:layout_constraintStart_toStartOf="@+id/frag_looper_btn_stop"
        app:layout_constraintTop_toBottomOf="@+id/frag_looper_btn_stop" />

    <Button
        android:id="@+id/frag_looper_btn_task_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Task B"
        app:layout_constraintEnd_toEndOf="@+id/frag_looper_btn_task_a"
        app:layout_constraintStart_toStartOf="@+id/frag_looper_btn_task_a"
        app:layout_constraintTop_toBottomOf="@+id/frag_looper_btn_task_a" />
</androidx.constraintlayout.widget.ConstraintLayout>