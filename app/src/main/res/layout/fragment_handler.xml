<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Handler.HandlerFragment">


    <Button
        android:id="@+id/frag_handler_btn_do_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Do Work"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/frag_handler_btn_remove_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Remove Work"
        app:layout_constraintEnd_toEndOf="@+id/frag_handler_btn_do_work"
        app:layout_constraintStart_toStartOf="@+id/frag_handler_btn_do_work"
        app:layout_constraintTop_toBottomOf="@+id/frag_handler_btn_do_work" />
</androidx.constraintlayout.widget.ConstraintLayout>